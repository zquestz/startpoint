<%= f.error_messages %>
<div class="fs">
  <%= f.label :login, t(:login_email) %>
  <%= f.text_field :login %>
</div>
<div class="fs">
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<div class="fs remember_me">
  <%= f.check_box :remember_me, :checked => true %> <%= t(:remember_me) -%> &nbsp;&nbsp; | &nbsp;&nbsp;<%= link_to(t(:forgot_password), new_password_reset_path) %>
</div>