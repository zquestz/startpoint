<h2><%= t(:edit_gallery) -%></h2>
<% form_for(@gallery, :url => admin_gallery_path(@gallery), :html => { :multipart => true }) do |f| %>
  <%- field_set_tag do -%>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <div class="bs">
      <%= f.submit t(:update) %>&nbsp;&nbsp;- <%= t(:or) -%> -&nbsp;&nbsp;<%= link_to(t(:cancel), safe_location(admin_galleries_path)) %>
    </div>
  <%- end -%>
<% end %>
