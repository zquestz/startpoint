<div class="batch_display_item">
  <fieldset class="batch_item">
    <div class="fs">
      <%= image_tag batch_image.file.url(:edit) %>
    </div>
    <div class="fs">
      <%= label_tag "image_gallery_ids_#{batch_image.id}", t('activerecord.attributes.image.galleries') %>
      <%= select_tag "image[gallery_ids_#{batch_image.id.to_s}]", options_from_collection_for_select(Gallery.all, 'id', 'title', :selected => batch_image.gallery_ids), :id => "image_gallery_ids_#{batch_image.id}", :multiple => true, :title => t(:select_gallery) %>
    </div>
    <div class="fs">
      <%= label_tag "image_page_ids_#{batch_image.id}", t('activerecord.attributes.image.pages') %>
      <%= select_tag "image[page_ids_#{batch_image.id.to_s}]", options_from_collection_for_select(Page.all, 'id', 'name', :selected => batch_image.page_ids), :id => "image_page_ids_#{batch_image.id}", :multiple => true, :title => t(:select_page) %>
    </div>
    <div class="fs">
      <%= label_tag "image_name_#{batch_image.id}", t('activerecord.attributes.image.name') %>
      <%= text_field_tag "image[name_#{batch_image.id}]", batch_image.name, :id => "image_name_#{batch_image.id}", :size => 28 %>
    </div>
    <div class="fs">
      <%= label_tag "image_description_#{batch_image.id}", t('activerecord.attributes.image.description') %>
      <%= text_area_tag "image[description_#{batch_image.id}]", batch_image.description, :id => "image_description_#{batch_image.id}", :cols => 28, :rows => 5 %>
    </div>
    <div class="fs">
      <%= label_tag "image_tag_list_#{batch_image.id}", t(:image_tags) %>
      <%= text_field_tag "image[tag_list_#{batch_image.id}]", batch_image.tag_list, :id => "image_tag_list_#{batch_image.id}", :size => 28 %>
    </div>
  </fieldset>
</div>