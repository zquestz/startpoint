# Rails doc generators need RedCloth
gem 'RedCloth', '>= 4.2.3'

# Pagination features
gem 'will_paginate', '>= 2.3.14'

# For tags
gem 'acts-as-taggable-on', '>= 2.0.6'

# Integrates jQuery
gem 'jrails', '>= 0.6.0'

# Recaptcha integration
gem 'recaptcha', '>= 0.2.3', :require => 'recaptcha/rails'

# Integrate LESS
